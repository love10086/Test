<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_empty_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/size_level4"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_empty_view_icon"
        android:layout_width="@dimen/empty_view_icon_size"
        android:layout_height="@dimen/empty_view_icon_size"
        android:layout_marginBottom="@dimen/empty_view_space"
        android:clickable="true"
        android:visibility="gone"
        tools:background="#ff0000"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_empty_view_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/size_level2"
        android:textColor="@color/empty_view_msg_textColor"
        android:textSize="@dimen/empty_view_msg_textSize"
        android:visibility="gone"
        tools:text="暂无数据"
        tools:visibility="visible"/>
</LinearLayout>